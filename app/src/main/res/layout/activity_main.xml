<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miguelpc.smps.MainActivity"
    android:background="#eee">

    <android.support.v7.widget.CardView
        android:id="@+id/card_a"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/imagen_a"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/imagen_a"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvStep_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step Down"
        android:layout_gravity="bottom"
        android:background="#8c000000"
        android:textColor="#ffe3e3e3"
        android:textSize="30sp"
        android:textStyle="bold"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_b"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="10dp"
        card_view:cardUseCompatPadding="true"
        android:layout_below="@+id/card_a">

    <ImageView
        android:id="@+id/imagen_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/imagen_b"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tvStep_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Step Up"
        android:layout_gravity="bottom"
        android:background="#8c000000"
        android:textColor="#ffe3e3e3"
        android:textSize="30sp"
        android:textStyle="bold"/>

    </android.support.v7.widget.CardView>


</RelativeLayout>
